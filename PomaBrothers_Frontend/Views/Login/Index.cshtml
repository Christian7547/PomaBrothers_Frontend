@model PomaBrothers_Frontend.Models.Employee
@{
}
<link rel="stylesheet" href="~/css/Forms.css">
<br />

<div class="alert alert-dismissible alert-danger" @ViewData["alert"]>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <strong>Error al validar tus credenciales</strong> porfavor revisa que el correo y tu contraseña sean correctos, o requistrate <a asp-action="Register" class="alert-link">AQUI</a>
</div>
<div class="tab-pane fade show active" style="text-align:center" id="login" role="tabpanel" aria-labelledby="login-tab">
    <h2 class="text-center mt-4 mb-4 font-weight-bold" style="text-transform: uppercase;">INICIAR SECION</h2>
    <form asp-action="Login">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-5">
                    <img src="~/images/logo.png" class="img-fluid" style="width:600px; height:400px;">
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control inputf" placeholder="Ingresa tu Correo" required="" asp-for="User">
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" class="form-control inputf" placeholder="Ingresa tu contraseña" required="" asp-for="Password">
                    </div>
                    <div class="mt-2 mb-5">
                        <button class="buttonG" type="submit">ACEPTAR</button>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        
    </form>
</div>

