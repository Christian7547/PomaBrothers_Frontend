@model Supplier
@{
    ViewData["Title"] = "Actualizar";
}
<link rel="stylesheet" href="~/css/Forms.css">
<br />
<h1 class="text-center">Actualizar Proveedor</h1>
<hr />
<form asp-action="Edit">
    <div class="container">
       
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="">
                    <div class="card-body cardActualizar" style="padding-left: 10px; padding-right:10px">
                        <h4 class="card-title text-center fw-bold">Proveedor</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BussinesName" class="control-label fw-bold"></label>
                                    <input asp-for="BussinesName" class="form-control inputf" />
                                    <span asp-validation-for="BussinesName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Ci" class="control-label fw-bold"></label>
                                    <input asp-for="Ci" type="number" class="form-control inputf" />
                                    <span asp-validation-for="Ci" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label fw-bold"></label>
                                    <input asp-for="Phone" type="number" class="form-control inputf" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Manager" class="control-label fw-bold"></label>
                                    <input asp-for="Manager" class="form-control inputf" />
                                    <span asp-validation-for="Manager" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label fw-bold"></label>
                                    <textarea asp-for="Address" class="form-control inputf" rows="4"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="Actualizar" class="buttonA" />
                                </div>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <a asp-action="Index" class="buttonV">Volver</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


