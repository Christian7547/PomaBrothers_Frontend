@model Supplier

@{
    ViewData["Title"] = "Actualizar";
}

<h1>Actualizar</h1>
<h4>Proveedor</h4>

<hr />

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="BussinesName" class="control-label"></label>
                <input asp-for="BussinesName" class="form-control" />
                <span asp-validation-for="BussinesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ci" class="control-label"></label>
                <input asp-for="Ci" type="number" class="form-control" />
                <span asp-validation-for="Ci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" type="number" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="Manager" class="control-label"></label>
                <input asp-for="Manager" class="form-control" />
                <span asp-validation-for="Manager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-success w-25" />
                <a asp-action="Index" class="btn btn-success w-25">Volver</a>
            </div>
        </div>
    </div>
</form>

<div id="countdown" style="display: none;">
    <span id="countdown-value" hidden>900</span>
</div>

<script src="~/js/countdown.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
