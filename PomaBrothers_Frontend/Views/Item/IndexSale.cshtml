    <div class=" modal-dialog modal-dialog-centered">
        <div class="modal-content AñadirModeloModel">
            <div class="modal-header text-center">
                <h5 class="textitos mx-auto">Añadir Cliente</h5>
            </div>
            <div class="modal-body" style="padding-left: 10px; padding-right:10px">
                <form>
                    <div class="mb-3">
                        <label for="txtName" class="col-form-label fw-bold">Nombre:</label>
                        <input type="text" class="form-control inputf" id="txtName">
                    </div>
                    <div class="mb-3">
                        <label for="txtLastName" class="col-form-label fw-bold">Apellido Paterno:</label>
                        <input type="text" class="form-control inputf" id="txtLastName">
                    </div>
                    <div class="mb-3">
                        <label for="txtSecondLastName" class="col-form-label fw-bold">Apellido Materno:</label>
                        <input type="text" class="form-control inputf" id="txtSecondLastName">
                    </div>
                    <div class="mb-3">
                        <label for="txtEmail" class="col-form-label fw-bold">Correo Electronico:</label>
                        <input type="email" class="form-control inputf" id="txtEmail">
                    </div>
                    <div class="mb-3">
                        <label for="txtCi" class="col-form-label fw-bold">CI:</label>
                        <input type="text" class="form-control inputf" id="txtCi">
                    </div>
