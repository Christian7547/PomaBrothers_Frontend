    <nav id="navLayout" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #5DDF64; display: none;">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <div>
                    <img src="images/logo.png" class="d-block navbar-logo" alt="Imagen 1" style="width: 40px; height: 40px;">
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
