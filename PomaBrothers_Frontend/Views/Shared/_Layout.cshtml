<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hermanos Poma</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/PomaBrothers_Frontend.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl colornav" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand navbar-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" style="width: 40px; height: 40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="dropdown-item nav-link" href="javascript:void(0);" onclick=" scrollToSection('carrusel')">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item nav-link" href="javascript:void(0);" onclick=" scrollToSection('cards')">Nuestros Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item nav-link" href="javascript:void(0);" onclick=" scrollToSection('aboutme')">Acerca Nosotros</a>
                        </li>
                        <li class="nav-item ">
                            <a class="dropdown-item nav-link" href="javascript:void(0);" onclick=" scrollToSection('contactUs')">Contáctanos</a>
                        </li>

                        @if (User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item">
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Warehouse" asp-action="Index">Almacenes</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Productos</a>
                                <div class="dropdown-menu ">
                                    <a class="dropdown-item" asp-controller="Item" asp-action="Index">Ver productos</a>
                                    <a class="dropdown-item" asp-controller="Delivery" asp-action="Index">Ver entregas</a>
                                    <a class="dropdown-item" asp-controller="Delivery" asp-action="New">Nueva entrega</a>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Index">Categorías</a>

                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ventas</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Sale" asp-action="Index">Registro de ventas</a>
                                    <a class="dropdown-item text-dark" asp-controller="Item" asp-action="IndexSale">Nueva ventas</a>
                                </div>
                            </li>
                            
                        }
                        else if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Warehouse" asp-action="Index">Almacenes</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Productos</a>
                                <div class="dropdown-menu ">
                                    <a class="dropdown-item" asp-controller="Item" asp-action="Index">Ver productos</a>
                                    <a class="dropdown-item" asp-controller="Delivery" asp-action="Index">Ver entregas</a>
                                    <a class="dropdown-item" asp-controller="Delivery" asp-action="New">Nueva entrega</a>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Index">Categorías</a>

                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ventas</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Sale" asp-action="Index">Registro de ventas</a>
                                    <a class="dropdown-item text-dark" asp-controller="Item" asp-action="IndexSale">Nueva ventas</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Proveedor</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Supplier" asp-action="Index">Ver Proveedor</a>
                                    <a class="dropdown-item" asp-controller="Supplier" asp-action="Create">Agregar Proveedor</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Empleados</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Employee" asp-action="Index">Ver Empleados</a>
                                    <a class="dropdown-item" asp-controller="Employee" asp-action="Create">Agregar empleado</a>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item nav-link">Cerrar sesión</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="dropdown-item nav-link" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                        </li>
                    </ul>
                </div>
            }
        </nav>
    </header>


    <div class="">
        <main role="main">

            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function scrollToSection(sectionId) {
            var section = document.getElementById(sectionId);
            if (section) {
                section.scrollIntoView({ behavior: 'smooth' });
            }
        }
        
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
