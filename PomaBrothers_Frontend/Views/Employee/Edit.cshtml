@model Employee

@{
    ViewData["Title"] = "Actualizar Empleado";
}
<link rel="stylesheet" href="~/css/Forms.css">


<form asp-action="Edit" enctype="multipart/form-data">
    <div class="container">
        <br />
        <h1 class="text-center">Actualizar Empleado</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card cardBPC">
                    <div class="card-body" style="width:100%">
                        <h4 class="card-title">Datos del Empleado</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control inputf" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control inputf" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="SecondLastName" class="control-label"></label>
                                    <input asp-for="SecondLastName" class="form-control inputf" />
                                    <span asp-validation-for="SecondLastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Ci" class="control-label"></label>
                                    <input asp-for="Ci" type="number" class="form-control inputf" />
                                    <span asp-validation-for="Ci" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label"></label>
                                    <input asp-for="Phone" type="number" class="form-control inputf" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="User" class="control-label"></label>
                                    <input asp-for="User" class="form-control inputf" />
                                    <span asp-validation-for="User" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control inputf" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Role" class="control-label"></label>
                                    <input asp-for="Role" class="form-control inputf" />
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="RegisterDate" class="control-label"></label>
                                    <input asp-for="RegisterDate" type="datetime-local" class="form-control inputf" />
                                    <span asp-validation-for="RegisterDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group collapse">
                                    <label asp-for="UrlImage" class="control-label"></label>
                                    <input asp-for="UrlImage" class="form-control inputf" />
                                    <span asp-validation-for="UrlImage" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <img class="img-fluid rounded-start p-bg-opacity-10 w-100 h-100 p-3" src="@Model.UrlImage" alt="Employee Image">
                                </div>
                                <div class="form-group">
                                    <label id="image" class="control-label">Seleccione una imagen</label>
                                    <input name="image" type="file" accept=".jpg" class="form-control-file" />
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <input type="submit" value="Actualizar" class="buttonA" />
                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="buttonV">Volver</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

